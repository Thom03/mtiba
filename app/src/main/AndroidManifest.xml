<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ke.co.carepay.mtiba">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/NoStatusBar">
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.PhoneInputActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.CreatePasswordActivity" />
        <activity
            android:name=".ui.Mtiba"
            android:label="@string/title_activity_mtiba"
            android:theme="@style/NoStatusBar" />
        <activity android:name=".ui.UpdateAccountDetailsActivity" />
        <activity android:name=".ui.CreateAccountActivity"></activity>
    </application>

</manifest>